@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Header2.cshtml";
}
<link rel="stylesheet" href="~/css/Add/style.css" asp-append-version="true"/>

<div class="italiana-regular form-wrapper d-flex justify-content-center align-items-center vh-100">
    <div class="card">
        <h1 class="text-center mb-3 fw-bold">Cadastrar</h1>

        <nav class="tabs mb-4">
            <ul>
                <li>
                    <button class="tab-button active-tab" data-target="form-item">Item/Prato</button>
                </li>
                <li>
                    <button class="tab-button" data-target="form-funcionario">Funcionário</button>
                </li>
                <li>
                    <button class="tab-button" data-target="form-fornecedor">Fornecedor</button>
                </li>
            </ul>
        </nav>

        <div class="form-content">
            <form id="form-item" class="form-section active-form">
                <input type="text" placeholder="Nome" id="name" class="form-control border-0 border-bottom border-dark mb-2" required/>
                <textarea placeholder="Descrição" id="desc"
                          class="form-control border-0 border-bottom border-dark mb-5 b-0" required></textarea>
                <button type="submit" class="btn btn-primary">Confirmar</button>
            </form>

            <form id="form-funcionario" class="form-section">
                <input type="text" placeholder="Nome" class="form-control border-0 border-bottom border-dark mb-2"/>
                <input type="text" placeholder="CPF" class="form-control border-0 border-bottom border-dark mb-2"/>
                <input type="text" placeholder="Telefone" class="form-control border-0 border-bottom border-dark mb-2"/>
                <input type="email" placeholder="Email" class="form-control border-0 border-bottom border-dark mb-2"/>
                <input type="text" placeholder="Usuário" class="form-control border-0 border-bottom border-dark mb-2"/>
                <input type="password" placeholder="Senha"
                       class="form-control border-0 border-bottom border-dark mb-5"/>
                <button type="submit" class="btn btn-primary">Confirmar</button>
            </form>

            <form id="form-fornecedor" class="form-section">
                <input type="text" placeholder="Nome" class="form-control border-0 border-bottom border-dark mb-2"/>
                <input type="email" placeholder="Email" class="form-control border-0 border-bottom border-dark mb-2"/>
                <input type="text" placeholder="Telefone" class="form-control border-0 border-bottom border-dark mb-5"/>
                <button type="submit" class="btn btn-primary">Confirmar</button>
            </form>
        </div>
    </div>
</div>

<script src="~/js/addFormsTabs.js" asp-append-version="true"></script>

